<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Color del NavBar-->
    <style name="Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#EB7273</item>
    </style>

    <!--Estilos propios-->
    <style name="EditText">
        <item name="android:layout_marginHorizontal">17dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">#757575</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Spinner">
        <item name="android:layout_marginHorizontal">17dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColorHint">#757575</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LblText">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LblEdit">
        <item name="android:layout_marginHorizontal">17dp</item>
        <item name="android:padding">7dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LblTextCenter">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FloatingButton">
        <item name="android:layout_margin">15dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:backgroundTint">@color/orange_peach</item>
    </style>

    <style name="Title">
        <item name="android:layout_marginHorizontal">30dp</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMinTextSize">15sp</item>
        <item name="android:autoSizeMaxTextSize">50sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

</resources>